<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DuckTableController">
    <center>
        <TableView fx:id="duckTable" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn text="ID" fx:id="idColumn" prefWidth="100"/>
                <TableColumn text="Username" fx:id="usernameColumn" prefWidth="150"/>
                <TableColumn text="Email" fx:id="emailColumn" prefWidth="200"/>
                <TableColumn text="Type" fx:id="typeColumn" prefWidth="100"/>
                <TableColumn text="Speed" fx:id="speedColumn" prefWidth="100"/>
                <TableColumn text="Resistance" fx:id="resistanceColumn" prefWidth="100"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10" bottom="10" left="10" right="10"/>
            </padding>

            <Button text="Previous" fx:id="prevButton" onAction="#handlePrevious"/>
            <Label fx:id="pageLabel" text="Page 1"/>
            <Button text="Next" fx:id="nextButton" onAction="#handleNext"/>
        </HBox>
    </bottom>
</BorderPane>