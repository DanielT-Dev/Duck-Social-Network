<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/21.0.0" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.MessagesController" spacing="10">

    <!-- User list on the left -->
    <ListView fx:id="userList" prefWidth="150" />

    <!-- Chat area on the right -->
    <VBox spacing="10" HBox.hgrow="ALWAYS">

        <VBox fx:id="chatBox" spacing="5" style="-fx-border-color: lightgray; -fx-border-width: 1;" VBox.vgrow="ALWAYS">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>

        <HBox spacing="5">
            <TextField fx:id="messageField" HBox.hgrow="ALWAYS" promptText="Type a message..."/>
            <Button text="Send" onAction="#handleSendMessage"/>
        </HBox>

    </VBox>

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

</HBox>
